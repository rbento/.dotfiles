# macOS
alias sc="screencapture -o -W"

# Bash
alias ..="cd .."
alias c=clear
alias d="cd ~/Desktop"
alias h="cd ~"
alias l="ls -lahF"
alias r="cd /"
alias wo="cd ~/Workspace"

# Brew
which -s brew
if ! [[ $? != 0 ]] ; then
    alias u="brew update;brew upgrade;brew upgrade --cask;brew cleanup;"
fi

# Functions
function reload() {
    source ~/.bashrc
}

# Git
alias g="git status"
alias gg="git ls"
alias gd="git diff"
alias gdc="git diff --cached"
alias b="git branch -avv"

# KDiff3
alias kdiff3="/Applications/kdiff3.app/Contents/MacOS/kdiff3"

# Kubernetes
alias k="kubectl"
alias mk="minikube"
alias hk="helm"

# Python
alias python="python3"
alias pip="python -m pip"

