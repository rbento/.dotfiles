# macOS
alias sc="screencapture -o -W"

# Arduino CLI
alias a="arduino-cli"

# Bash
alias ..="cd .."
alias c=clear
alias d="cd ~/Desktop"
alias l="ls -lahF"
alias r="cd /"
alias wo="cd ~/Workspace"

# Brew
which -s brew
if ! [[ $? != 0 ]] ; then
    alias u="brew update;brew upgrade;brew upgrade --cask;brew cleanup;"
fi

# Functions
function reload() {
    source ~/.bashrc
}

# Git
alias b="git branch -avv"
alias g="git status"
alias gd="git diff"
alias gdc="git diff --cached"
alias gg="git ls"

# KDiff3
alias kdiff3="/Applications/kdiff3.app/Contents/MacOS/kdiff3"

# Java
alias java8="sdk d java 8.0.312-zulu"
alias java11="sdk d java 11.0.14-zulu"
alias java17="sdk d java 17.0.2-zulu"

# Kubernetes
alias k="kubectl"
alias h="helm"
alias mk="minikube"
alias t="terraform"

# Python
alias python="python3"
alias pip="python -m pip"

# Bash Completion
complete -F __start_kubectl k
